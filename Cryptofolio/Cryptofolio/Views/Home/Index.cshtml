@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Cryptofolio";
    var count = (Double)ViewBag.count;
    var total = (Double)ViewBag.total;
    var daychange = (Double)ViewBag.daychange;
    var dates = ViewBag.chartDates as List<String>;
    var rates = ViewBag.chartRates as List<String>;
}


<div class="text-center"><h1 class="title">Cryptofolio</h1></div>
<div class="card">
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-4">
                <p class="card-text">
                    Portfolios
                    <h1>@count</h1>
                </p>
            </div>
            <div class="col-md-4">
                <p class="card-text">
                    Total Value of All Portfolios
                    <h1>$@total.ToString("0.00")</h1>
                </p>
            </div>
            <div class="col-md-4">
                <p class="card-text">
                    24 Hour Change
                    @if (@daychange > 0)
                    {
                        <h1 class="text-success">
                            +@daychange.ToString("0.00")%
                        </h1>
                    }
                    else
                    {
                        <h1 class="text-danger">
                            @daychange.ToString("0.00")%
                        </h1>
                    }
            </div>
        </div>
    </div>
    <div class="card-body text-center">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <canvas id="myChart" width="400" height="400"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <div class="card-body">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="row text-center">
                <div class="col-md-12">
                    <a class="btn btn-success btn-front" asp-area="" asp-controller="Portfolios" asp-action="Portfolios">View Portfolios</a>
                </div>
            </div>
        }
        else
        {
            <div class="row text-center">
                <div class="col-sm-6">
                    <a class="btn btn-success btn-front" asp-area="" asp-controller="Portfolios" asp-action="Portfolios">View Portfolios</a>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary btn-front" asp-area="Identity" asp-page="/Account/Login">Login</a><br />
                    <a class="btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            </div>
        }
    </div>


</div>

<script>
    var ctx = document.getElementById("myChart").getContext('2d');
    var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [@foreach (String d in dates) { @d; }],
            datasets: [{
                    label: 'Market Rates',
                data: [@foreach (String r in rates) { @r; }],
                borderColor: [
                    'rgba(255,15,22,1)'
                ],
                backgroundColor: [
                    'rgba(255,15,22,0.2)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

</script>