@model Cryptofolio.Models.Comment

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditComment">
            <div class="form-group">
                <input asp-for="ID" class="form-control" hidden value="@Model.ID" />
                <input asp-for="Portfolio_ID" class="form-control" hidden value="@Model.Portfolio_ID" />
                <input asp-for="OwnerID" class="form-control" hidden value="@Model.OwnerID" />
                <input asp-for="Creation_Date" class="form-control" hidden value="@Model.Creation_Date"/>
                <h5>Edit your comment</h5>
                <input asp-for="Message" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>
