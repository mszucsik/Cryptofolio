@model IEnumerable<Cryptofolio.Models.Asset>

@{
    ViewData["Title"] = "Assets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>Assets</h3>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="card-header text-center bg-light">

                    <a asp-action="Create" class="btn btn-success">Create Asset</a>

                </div>
            }
            <div class="card-body">
                <table id="price-table" class="table table-striped table-bordered no-margin" style="width:100%">
                    <thead>
                        <tr>
                            <th>Asset Name</th>
                            <th>Asset Code</th>
                            <th>24 Hour Change</th>
                            <th>Current Price</th>
                            @if (User.IsInRole("Admin"))
                            {

                                <th>Activated</th>
                                <th>Options</th>
                            }
                            else
                            {
                                <th>Options</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Code</td>
                                <td>
                                    @if (item.Daily_Change > 0)
                                    {
                                        <span class="text-success">
                                            +@item.Daily_Change.ToString("0.00")%
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">
                                            @if (Double.IsNaN(item.Daily_Change))
                                            {
                                                <span>
                                                    0.00%
                                                </span>
                                            }
                                            else
                                            {
                                                <span>
                                                    @item.Daily_Change.ToString("0.00")%
                                                </span>
                                            }

                                        </span>
                                    }
                                </td>
                                <td>@item.Current_Price</td>


                                @if (User.IsInRole("Admin"))
                                {

                                    @if (item.Activated == true)
                                    {
                                        <td>
                                            <span class="badge badge-sm badge-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="ToggleActive" asp-route-id="@item.ID" class="btn btn-sm btn-danger card-link asset-btn">Disable</a>
                                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary card-link  asset-btn">View @item.Code</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="badge badge-sm badge-danger"><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="ToggleActive" asp-route-id="@item.ID" class="btn btn-sm btn-muted card-link asset-btn">Enable</a>
                                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary card-link asset-btn">View @item.Code</a>
                                        </td>
                                    }

                                }
                                else
                                {
                                    <td><a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary card-link  asset-btn">View @item.Code</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        // Datatable with pagination
        $(document).ready(function () {
            $('#price-table').DataTable({
                "paging": true
            });
        });
    </script>
}