@model Cryptofolio.Models.Portfolio
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Portfolio: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var assets = ViewData["assets"] as List<Asset>;
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>@Html.DisplayFor(model => model.Name)</h3>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <p class="card-text">
                            Created by
                            <h4>@Html.DisplayFor(model => model.OwnerID)</h4>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            Rating
                            <h4>@Html.DisplayFor(model => model.Rating)</h4>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            Created on
                            <h4>@Html.DisplayFor(model => model.Creation_Date)</h4>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            Total Value (BTC)
                            <h4>@Html.DisplayFor(model => model.BTC_Value)</h4>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            Total Value (USD)
                            <h4>@Html.DisplayFor(model => model.USD_Value)</h4>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            Percent Change
                            @if (Model.Percent_Change > 0)
                            {
                                <h4 class="text-success">
                                    +@Model.Percent_Change%
                                </h4>
                            }
                            else
                            {
                                <h4 class="text-danger">
                                    @Model.Percent_Change%
                                </h4>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <h4>Holdings</h4>
            </div>
            <ul class="list-group list-group-flush">
                @if (Model.Holdings.Count > 0)
                {

                        <div id="holdings-table">
                            <table id="holdings" class="table table-striped table-bordered" style="width:100%">


                                <thead>
                                    <tr>
                                        <th>Asset Type</th>
                                        <th>Amount</th>
                                        <th>Current Price</th>
                                        <th>Purchase Price</th>
                                        <th>24 Hour Change</th>
                                        <th>Overall Change</th>
                                        @if ((@UserManager.GetUserName(User) == Model.OwnerID) || (User.IsInRole("Admin")))
                                        {
                                            <th>Options</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Holdings)
                                    {
                                        Asset assetContext = new Asset();
                                        @foreach (var asset in assets)
                                        {
                                            if (@item.AssetType == asset.Code)
                                            {
                                                assetContext = asset;
                                            }
                                        }


                                        var overall = (assetContext.CurrentPrice - item.PurchasePrice) / item.PurchasePrice * 100;
                                        var dailychange = 0.00;
                                        <tr>
                                            <td>@item.AssetType</td>
                                            <td>@item.Amount</td>
                                            <td>$@assetContext.CurrentPrice.ToString("0.00")</td>
                                            <td>$@item.PurchasePrice.ToString("0.00")</td>
                                            <td>
                                                @if (dailychange > 0)
                                                {
                                                    <span class="text-success">+@dailychange.ToString("0.00")%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">@dailychange.ToString("0.00")%</span>
                                                }
                                            </td>
                                            <td>
                                                @if (overall > 0)
                                                {
                                                    <span class="text-success">+@overall.ToString("0.00")%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">@overall.ToString("0.00")%</span>
                                                }
                                            </td>

                                            @if ((@UserManager.GetUserName(User) == Model.OwnerID) || (User.IsInRole("Admin")))
                                            {
                                                <td class="text-center">
                                                    <a asp-action="EditHolding" asp-route-id="@item.ID" class="btn btn-sm btn-primary card-link holding-btn">Edit</a>
                                                    <a asp-action="DeleteHolding" asp-route-id="@item.ID" class="btn btn-sm btn-danger card-link holding-btn">Delete</a>
                                                </td>
                                            }
                                        </tr>

                                    }
                                </tbody>

                            </table>
                        </div>
                   
                }
                else
                {
                    <li class="list-group-item">

                        <div class="text-center spaced-out">
                            This portfolio doesn't have any holdings yet
                            @if ((@UserManager.GetUserName(User) == Model.OwnerID) || (User.IsInRole("Admin"))) { 
                                <span>, </span><a asp-action="AddHolding" class="card-link" asp-route-id="@Model.ID">click here</a><span> to add one</span>
                            }
                        </div>
                        </li>
                }
                @if ((@UserManager.GetUserName(User) == Model.OwnerID) || (User.IsInRole("Admin")))
                {


                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-3">

                                <a asp-action="AddHolding" class="card-link" asp-route-id="@Model.ID">Add an asset holding</a>

                            </div>
                        </div>
                    </li>


                }
            </ul>
            <div class="card-body">
                @if ((@UserManager.GetUserName(User) == Model.OwnerID) || (User.IsInRole("Admin")))
                {
                    <a asp-action="Index" class="card-link">Back to portfolio list</a>
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="card-link">Make changes</a>
                    <a asp-action="Delete" asp-route-id="@Model.ID" class="card-link">Delete this portfolio</a>
                }
                else
                {
                    <a asp-action="Portfolios" class="card-link">Back to portfolio list</a>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#holdings-table').DataTable({
            "paging": true
        });
    });
</script>