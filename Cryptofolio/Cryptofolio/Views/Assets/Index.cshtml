@model IEnumerable<Cryptofolio.Models.Asset>

@{
    ViewData["Title"] = "Assets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>Assets</h3>
            </div>
            <div class="card-body">
                <table id="price-table" class="table table-striped table-bordered no-margin" style="width:100%">
                    <thead>
                        <tr>
                            <th>Asset Name</th>
                            <th>Asset Code</th>
                            @if (User.IsInRole("Admin"))
                            {

                                <th>Activated</th>
                                <th>Options</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Code</td>

                                @if (User.IsInRole("Admin"))
                                {

                                    @if (item.Activated == true)
                                    {
                                        <td>
                                            <span class="badge badge-sm badge-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="ToggleActive" asp-route-id="@item.ID" class="btn btn-sm btn-danger card-link">Disable</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="badge badge-sm badge-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="ToggleActive" asp-route-id="@item.ID" class="btn btn-sm btn-sucess card-link">Enable</a>
                                        </td>
                                    }

                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        // Datatable with pagination
        $(document).ready(function () {
            $('#price-table').DataTable({
                "paging": true
            });
        });
    </script>
}