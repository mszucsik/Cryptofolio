@model IEnumerable<Cryptofolio.Models.MarketPrice>

@{
    ViewData["Title"] = "Market Prices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>Market Prices</h3>
            </div>
            <div class="card-body">
                <div id="price-table">
                    <table id="holdings" class="table table-striped table-bordered no-margin" style="width:100%">
                        <thead>
                            <tr>
                                <th>Asset Code</th>
                                <th>Asset Name</th>
                                <th>Price Date</th>
                                <th>Current Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MarketCurrency</td>
                                    <td>@item.MarketCurrencyLong</td>
                                    <td>@item.TimeStamp</td>
                                    <td>@item.CurrentPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#price-table').DataTable({
            "pagingType": "scrolling"
        });
    });
</script>