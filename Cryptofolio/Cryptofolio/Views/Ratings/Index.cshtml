@model IEnumerable<Cryptofolio.Models.Rating>

@{
    ViewData["Title"] = "Ratings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>Ratings</h3>
            </div>
            <div class="card-body">
                <table id="price-table" class="table table-striped table-bordered no-margin" style="width:100%">
                    <thead>
                        <tr>
                            <th>Portfolio</th>
                            <th>Created/Updated</th>
                            <th>Rated By</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>


                            <td>@item.Portfolio_Name</td>
                            <td>@item.Creation_Date</td>
                            <td>@item.OwnerID</td>
                            <td>
                                @if (item.Vote == RatingType.Up)
                                {
                                    <span class="badge badge-sm badge-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                                }
                                else if (item.Vote == RatingType.None)
                                {
                                    <span class="badge badge-sm badge-secondary"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                }
                                else if (item.Vote == RatingType.Down)
                                {
                                    <span class="badge badge-sm badge-danger"><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        // Datatable with pagination
        $(document).ready(function () {
            $('#price-table').DataTable({
                "paging": true
            });
        });
    </script>
}