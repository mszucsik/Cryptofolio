@model Cryptofolio.Models.Asset

@{
    ViewData["Title"] = "Create Asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var assets = ViewData["assets"] as List<String>;
    var prices = ViewData["prices"] as List<MarketPrice>;
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h3>Create Asset</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Code" class="control-label"></label><br />
                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    @foreach (var item in assets)
                                    {
                                        listItems.Add(new SelectListItem { Text = item, Value = item });
                                    }
                                }
                                @Html.DropDownListFor(model => model.Code, listItems, "Select Asset", htmlAttributes: new { @class = "form-control", AssetType = "AssetType", @onchange = "updatePriceDisplay(value);" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-for="Activated" hidden value="true" />
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                        <div class="col-md-6" id="assetdetails" style="display:none">
                            @foreach (var item in prices)
                            {

                                <div id="@item.MarketCurrency" class="card">
                                    <div class="card-body text-center">
                                        <h4>@item.MarketCurrencyLong</h4>
                                        <h5>$@item.CurrentPrice USD/@item.MarketCurrency</h5>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="card-link">Back to assets</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    // This function is used to display only the current asset
    // price of the selected asset, and hide the others
    function updatePriceDisplay(value) {
        console.log(value);
        $('#assetdetails').show();
        $('#assetdetails').children().hide();

        if (value !== "") {
            $('#' + value).show();
        }
    }
</script>
